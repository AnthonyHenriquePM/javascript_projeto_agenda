<% if (errors.length> 0) { %>

    <div class="row">
        <div class="col my-3 ">
            <div class="alert alert-danger"></div>
            <%errors.forEach(erro=> { %>
                <%= erro %><br>
                    <% }); %>
        </div>
    </div>

    <% } %>


        <% if (success.length> 0) { %>

            <div class="row">
                <div class="col my-3 ">
                    <div class="alert alert-success"></div>
                    <%success.forEach(success=> { %>
                        <%= success %><br>
                            <% }); %>
                </div>
            </div>

            <% } %>